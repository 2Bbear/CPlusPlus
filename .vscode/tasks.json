{
    "version": "2.0.0",
    "runner": "terminal",
    "type": "shell",
    "echoCommand": true,
    "presentation": {
        "reveal": "always"
    },
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: 2bbear의 한국어 cl.exe 활성 파일 빌드",
            "command": "%BUILD%",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe:",
                "${fileDirname}\\64Build\\${fileBasenameNoExtension}.exe",
                "${file}"

            ],
            "options": {
                "cwd": "${fileDirname}\\64Build",
                "env":{
                    "BUILD":"VsDevCmd.bat && chcp 65001 && cl.exe"
                }
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "컴파일러: cl.exe"
        }
    ]
}